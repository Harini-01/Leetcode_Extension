{
    "manifest_version": 3,
    "name": "Leetcode AI Doubt Solver",
    "version": "1.0.0",
    "author": "Harini, Apoorva",
    "description": "An extension that can help you with dsa questions in ideation,debugging or in general whenever you get stuck",
    "permissions":["scripting",
                    "activeTab",
                "storage"],
    "host_permissions":[
        "https://leetcode.com/problemset/"
    ],
    "content_scripts":[
        {
            "js":[
                "content.js"
            ],
            "matches":[
                "https://leetcode.com/problemset/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}